<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>GoodFood</display-name>
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- Redirector Servlet -->
	<servlet>
		<servlet-name>RedirectorServlet</servlet-name>
		<servlet-class>com.sce.service.RedirectorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RedirectorServlet</servlet-name>
		<url-pattern>/com/sce/servlets/*</url-pattern>
	</servlet-mapping>
	<!-- Filters -->
	<filter>
		<filter-name>Filter</filter-name>
		<filter-class>com.sce.servlets.Filter</filter-class>
	</filter>
	<filter>
		<filter-name>FilterAdmin</filter-name>
		<filter-class>com.sce.servlets.FilterAdmin</filter-class>
	</filter>
	<filter>
		<filter-name>FilterClient</filter-name>
		<filter-class>com.sce.servlets.FilterClient</filter-class>
	</filter>
	<filter>
		<filter-name>FilterUser</filter-name>
		<filter-class>com.sce.servlets.FilterUser</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Filter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Filter</filter-name>
		<url-pattern>/MenuRestaurant.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterAdmin</filter-name>
		<url-pattern>/admin.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterAdmin</filter-name>
		<url-pattern>/Admin</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterAdmin</filter-name>
		<url-pattern>/adminTable.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/ClientsPage.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/AddNewItem.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/AddNewRestaurant.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/AddSubCategory.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/EditItem.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/EditRestaurant.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterClient</filter-name>
		<url-pattern>/EditSubCategory.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/registration.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/CategoryPage.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/MenuRestaurant.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/ordering.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterUser</filter-name>
		<url-pattern>/endOperation.jsp</url-pattern>
	</filter-mapping>
	<error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>
	<error-page>
        <error-code>405</error-code>
        <location>/error.html</location>
    </error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error.html</location>
	</error-page>
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/error.html</form-error-page>
		</form-login-config>
	</login-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Add Account</web-resource-name>
			<url-pattern>/admin/newaccount.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Purchase</web-resource-name>
			<url-pattern>/ordering.jsp</url-pattern>
			<url-pattern>/Ordering</url-pattern>
			<url-pattern>/admin.jsp</url-pattern>
			<url-pattern>/Admin</url-pattern>
			<url-pattern>/adminTable.jsp</url-pattern>
			<url-pattern>/UserPage.jsp</url-pattern>
			<url-pattern>/registration.jsp</url-pattern>
			<url-pattern>/PasswordRecovery.jsp</url-pattern>
			<url-pattern>/ClientsPage.jsp</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
</web-app>